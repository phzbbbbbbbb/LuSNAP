QPushButton {
    /*display: inline-block;*/
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    border: 1px solid transparent;
    padding: 0.5rem 1.5rem;
    line-height: 1.5;
    border-radius:5px;
    /*transition: all 0.2s;*/
    color: #212529;
    background-color: #f8f9fa;
    border-color: gray;
    min-width:131px;
    min-height:30px;
    border-style:outset;
}

QPushButton:hover {
    color: #212529;
    background-color: #e2e6ea;
    border-color: #dae0e5;
}

